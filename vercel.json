{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "memory": 3008,
        "includeFiles": ["*.pkl", "*.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/search",
      "dest": "/server.py",
      "methods": ["POST"],
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ]
}